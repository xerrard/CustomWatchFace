<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.activity.FaceDetailActivity">

    <include layout="@layout/toolbar"/>

    <android.support.percent.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <com.igeak.customwatchface.view.view.watchfaceview.WatchPreviewView
            android:id="@+id/watch_view"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_heightPercent="50%"
            app:layout_widthPercent="50%"
            android:layout_alignParentTop="true"
            app:layout_marginLeftPercent = "25%"
            android:background="@color/blue"/>

        <Button
            android:id="@+id/sendwatch"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            app:layout_heightPercent = "10%"
            android:layout_toRightOf="@id/watch_view"
            app:layout_marginTopPercent = "35%"
            android:text="@string/sendtowatch"
            android:onClick="sendToWatch"/>

        <TextView
            android:id="@+id/watch_function"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="@string/facefuction"
            app:layout_heightPercent="15%"
            android:layout_below="@id/watch_view"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_below="@id/watch_function"
            app:layout_heightPercent="35%"/>
    </android.support.percent.PercentRelativeLayout>

</LinearLayout>
